    <mainClass>${app.mainclass}</mainClass>
    <os>ios</os>
    <arch>thumbv7</arch>
    <resources>
        <resource>
            <directory>resources/Environment</directory>
        </resource>
        <resource>
            <directory>resources/Particles</directory>
        </resource>
        <resource>
            <directory>resources/Sounds</directory>
